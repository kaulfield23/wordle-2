<div class="wholeScores">
  <h1 id="highscore">üßÅHighscore</h1>

  <h1>Sort</h1>
  <div class="wordLength" style="width:200px;">
    <select>
      <option value="0">All types</option>
      <option value="1">4 letter words</option>
      <option value="2">5 letter words</option>
      <option value="3">6 letter words</option>
    </select>
  </div>
  {{#if rankOfUser}}
    <div id="rankFrame">
      <h1 id="showRank">Your Rank is #
        <span id="rankNum">
          {{rankOfUser}}
        </span>
      </h1>
    </div>{{/if}}
  {{#each highscore}}
    <div class="score">
      <div class="userInfo">
        <h1 id="rank" class="scoreItem">{{math @index "+" 1}}</h1>
        <h2 id="userName" class="scoreItem">{{this.name}}</h2>
        <div class="gap"></div>
        <div class="gameInfo scoreItem">
          <h3>{{this.playTime}}</h3>
          <h3>Guess : {{this.guesses}}</h3>
        </div>

      </div>
      <div class="correctWord">
        <div class="correctWordList">
          <h3 id="word">Word : </h3>
          {{#strFunc this.correctWord}}
            {{this}}
          {{/strFunc}}
        </div>
        <h3 id="wordType">{{this.wordType}}</h3>
      </div>
    </div>
  {{/each}}

  {{#unless highscore}}
    <h1 id="noResult">No result!</h1>
  {{/unless}}

</div>